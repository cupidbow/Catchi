<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/very_dark_grey"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/rlCameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/arrow"
        android:padding="20dp"
        android:layout_marginTop="24dp"/>
    
    <ImageView
        android:id="@+id/ivRecord"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:src="@drawable/record_button"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"/>

    <ImageView
        android:id="@+id/ivReverse"
        android:layout_width="29dp"
        android:layout_height="27dp"
        android:src="@drawable/reverse_camera_icon"
        android:layout_toLeftOf="@+id/ivRecord"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="39.5dp"/>

    <ImageView
        android:id="@+id/ivGallery"
        android:layout_width="24dp"
        android:layout_height="18dp"
        android:src="@drawable/gallery_icon"
        android:layout_toRightOf="@+id/ivRecord"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="36.5dp"
        android:layout_marginBottom="44dp"/>
    
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/ivAddPeople"
            android:layout_width="27dp"
            android:layout_height="20.5dp"
            android:src="@drawable/add_people"
            android:layout_above="@+id/rlInvites"
            android:layout_alignParentRight="true"
            android:layout_marginRight="23.5dp"
            android:layout_marginBottom="27.5dp"/>
        
        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="23.5dp"
            android:layout_height="23.5dp"
            android:src="@drawable/edit_icon"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="24.5dp"/>
        <RelativeLayout
            android:id="@+id/rlInvites"
            android:layout_width="31dp"
            android:layout_height="28.5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="43dp"
            android:layout_marginRight="21.5dp">
            <ImageView
                android:layout_width="27.5dp"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/invites_icon"/>
            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/badge"
                android:layout_alignParentRight="true"
                android:text="3"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/white_100"

                android:gravity="center"/>
        </RelativeLayout>

        
    </LinearLayout>
    
    

</RelativeLayout>