<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="85dp"
    android:layout_height="92dp">

    <ImageView
        android:background="@drawable/user_1_border"
        android:id="@+id/ivAvatar"
        android:padding="2.5dp"
        android:src="@drawable/avatar_2"
        android:layout_width="75dp"
        android:layout_centerHorizontal="true"
        android:layout_height="75dp" />

    <TextView
        android:id="@+id/tvNickname"
        style="@style/UsernameCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="backbeauty"
        android:gravity="center"
        android:maxLines="1"
        android:layout_alignParentBottom="true"
        />

    <ImageView
        android:id="@+id/ivOnline"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginRight="5dp"
        android:layout_alignRight="@+id/ivAvatar"
        android:src="@drawable/online_avatar_1"/>


</RelativeLayout>